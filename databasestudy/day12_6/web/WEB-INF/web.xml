        <servlet-name>Servlet3Demo</servlet-name>
        <servlet-class>com.ithei.servletcontext.Servlet3Demo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet3Demo</servlet-name>
        <url-pattern>/Servlet3Demo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ResponDemo</servlet-name>
        <servlet-class>com.ithei.servletcontext.ResponDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResponDemo</servlet-name>
        <url-pattern>/ResponDemo</url-pattern>
    </servlet-mapping>



</web-app>